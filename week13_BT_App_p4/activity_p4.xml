<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".p4Activity">

    <TextView
        android:id="@+id/practice1_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/go_p4"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/btBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="25dp"
        android:background="@drawable/selector_bt_btn"
        android:hint="dd"
        android:onClick="clickFunc"></Button>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/p4_do"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="clickFunc"
            android:text="@string/p4_do"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_re"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="clickFunc"
            android:text="@string/p4_re"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_mi"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="clickFunc"
            android:text="@string/p4_mi"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_fa"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="clickFunc"
            android:text="@string/p4_fa"
            android:textSize="35dp"></Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/p4_so"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:onClick="clickFunc"
            android:text="@string/p4_so"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_ra"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:onClick="clickFunc"
            android:text="@string/p4_ra"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_ti"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:onClick="clickFunc"
            android:text="@string/p4_ti"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_finish"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:onClick="clickFunc"
            android:text="@string/p4_finish"
            android:textSize="35dp"></Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/p4_san"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="30dp"
            android:onClick="clickFunc"
            android:text="@string/p4_san"
            android:textSize="35dp"></Button>

        <Button
            android:id="@+id/p4_star"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="30dp"
            android:onClick="clickFunc"
            android:text="@string/p4_star"
            android:textSize="35dp"></Button>
    </LinearLayout>
</LinearLayout>